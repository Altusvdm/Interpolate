<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cube_background">

    <TextView
        android:id="@+id/cube_mode_icon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/padding_small"/>

    <RadioButton
        android:id="@+id/cube_selected_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/padding_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_small"
        android:layout_alignParentBottom="true"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_margin="1dp">

        <View
            android:id="@+id/cube_battery_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:background="#005500"/>

    </LinearLayout>

</RelativeLayout>